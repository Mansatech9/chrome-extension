{
  "manifest_version": 3,
  "name": "Job Tracker Extension",
  "version": "1.0.0",
  "description": "Extract and save job listings from popular job sites",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "host_permissions": [
    "https://www.linkedin.com/*",
    "https://www.indeed.com/*",
    "https://www.glassdoor.com/*",
    "https://stackoverflow.com/*",
    "https://github.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_title": "Job Tracker",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "content_scripts": [
    {
      "matches": [
        "https://www.linkedin.com/*",
        "https://www.indeed.com/*",
        "https://www.glassdoor.com/*",
        "https://stackoverflow.com/*",
        "https://github.com/*"
      ],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}