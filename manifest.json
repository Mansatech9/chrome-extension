{
  "manifest_version": 3,
  "name": "JobTracker CRM",
  "version": "1.2.0",
  "description": "Easily save job listings to your CRM with one click",
  "permissions": [
    "activeTab",
    "storage",
    "scripting",
    "contextMenus"
  ],
  "host_permissions": [
    "https://*/",
    "http://localhost:*/"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.svg",
      "32": "icons/icon32.svg",
      "48": "icons/icon48.svg",
      "128": "icons/icon128.svg"
    }
  },
  "icons": {
    "16": "icons/icon16.svg",
    "32": "icons/icon32.svg",
    "48": "icons/icon48.svg",
    "128": "icons/icon128.svg"
  },
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  }
}